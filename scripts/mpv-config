#!/bin/sh
set -e

BUILD="$(pwd)"

USER_OPTS="$@"
if test -f "$BUILD"/mpv_options ; then
    USER_OPTS="$(cat "$BUILD"/mpv_options) $USER_OPTS"
fi
OPTIONS="$USER_OPTS"

case "$PKG_CONFIG_PATH" in
  '')
    export PKG_CONFIG_PATH="$config_local_prefix/lib/pkgconfig"
    ;;
  *)
    export PKG_CONFIG_PATH="$config_local_prefix/lib/pkgconfig:$PKG_CONFIG_PATH"
    ;;
esac

echo Using mpv options: $OPTIONS

cd "$config_mpv_source"
./waf configure $OPTIONS
